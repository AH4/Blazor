<CodeSnippet>
@(@"<DxListBox Data=""@Persons.DataSource""
           TextFieldName=""@nameof(Person.Text)""
           SelectionMode=""ListBoxSelectionMode.Multiple""
           ShowCheckboxes=""@ShowCheckboxes""
           @bind-Values=""@Values""
           style=""height: 232px;"">
</DxListBox>

@code {
    bool ShowCheckboxes { get; set; } = true;
    IEnumerable<Person> Values { get; set; } = Persons.DataSource.Take(2);
}")
</CodeSnippet>
