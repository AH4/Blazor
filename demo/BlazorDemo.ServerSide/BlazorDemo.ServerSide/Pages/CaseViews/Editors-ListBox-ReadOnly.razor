@using Demo.Blazor.Model

<div class="demo-description" id="ReadOnly">
    <h2><NavLink class="demo-anchor" href="ListBox#ReadOnly" />List Box - Read-Only Mode</h2>
    <p>
        The List Box component allows you to display selected items, but do not allow users to change the selection. Set the <b>ReadOnly</b> property to <b>true</b> to activate the read-only mode.
    </p>
</div>

<DxListBox Data="@Persons.DataSource" CssClass="mw-480 mb-2" style="height: 232px;"
           TextFieldName="Text"
           ReadOnly="true"
           SelectedItems="@SelectedItems">
</DxListBox>

<div class="code-snippet card demo-card-wide">
    <CodeSnippetHeader></CodeSnippetHeader>
    <div class="card-footer text-muted ">
        <CodeSnippet_Editors_ListBox_ReadOnly></CodeSnippet_Editors_ListBox_ReadOnly>
    </div>
</div>

@code {
    IEnumerable<Person> SelectedItems => Persons.DataSource.Take(1);
}
