<div class="demo-description">
    <h2>Text Box - Read-Only Mode</h2>
    <p>
        <a class="helplink" target="_blank" href="https://docs.devexpress.com/Blazor/DevExpress.Blazor.DxTextBox">DxTextBox</a> allows you to display the value, but does not allow users to change it.
        Set the <a class="helplink" target="_blank" href="https://docs.devexpress.com/Blazor/DevExpress.Blazor.Base.DxTextBoxBase.ReadOnly">ReadOnly</a> property to <b>true</b> to activate the read-only mode.
    </p>
</div>

<div class="card demo-card">
    <div class="card-header">TextBox text is: "<b>@TextValue</b>"</div>
    <div class="card-body mw-480">
        <DxTextBox @bind-Text="@TextValue" ReadOnly="true"></DxTextBox>
    </div>
</div>

<div class="code-snippet card demo-card-wide">
    <CodeSnippetHeader></CodeSnippetHeader>
    <div class="card-footer text-muted ">
        <CodeSnippet_Editor_TextBox_ReadOnly></CodeSnippet_Editor_TextBox_ReadOnly>
    </div>
</div>

@code {
    string textValue = "End user can change the DxTextBox Value";
    string TextValue { get => textValue; set { textValue = value; InvokeAsync(StateHasChanged); } }
}
