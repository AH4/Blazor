<div class="demo-description">
    <h2>Text Box - Password<span class="demo-badge badge badge-success">New</span></h2>
    <p>
        This feature will allow you to mask all characters entered into the editor.
        Set the <b>Password</b> DxTextBox property to true to switch the password mode on.
    </p>
</div>

<div class="card demo-card">
    <div class="card-header">TextBox text is: "<b>@TextValue</b>"</div>
    <div class="card-body mw-480">
        <DxTextBox @bind-Text="@TextValue" Password="true"></DxTextBox>
    </div>
</div>

<div class="code-snippet card demo-card-wide">
    <CodeSnippetHeader></CodeSnippetHeader>
    <div class="card-footer text-muted ">
        <CodeSnippet_Editor_TextBox_Password></CodeSnippet_Editor_TextBox_Password>
    </div>
</div>

@code {
    string textValue = "";
    string TextValue { get => textValue; set { textValue = value; InvokeAsync(StateHasChanged); } }
}
